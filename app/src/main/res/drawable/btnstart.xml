<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="5dip" android:color="#b52700" />
            <gradient android:angle="180" android:startColor="#b52700" android:endColor="#d92f00" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="5dip" android:color="#b52700" />
            <gradient android:angle="90" android:startColor="#b52700" android:endColor="#d92f00" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#000000" />
            <solid android:color="#b52700" />
        </shape>
    </item>
</selector>