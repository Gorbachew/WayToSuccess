<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#20ff00f0" />
            <gradient android:angle="270" android:startColor="#ff00ff" android:endColor="#a8a8a8" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="4dip" android:color="#20ff00f0" />
            <gradient android:angle="270" android:startColor="#a8a8a8" android:centerColor="@color/white" android:endColor="#ebebeb" />
        </shape>
    </item>
</selector>