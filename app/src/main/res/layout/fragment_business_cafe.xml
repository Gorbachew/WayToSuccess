<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbusines"
    android:largeHeap="true"
    tools:context=".BusinessCafe">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/BCBis">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCad"
                    style="@style/labelGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnBCad"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngame"
                    android:text="@string/BCbuyAd" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCroom"
                    style="@style/labelGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnBCroom"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngame"
                    android:text="@string/BCbuyRoom" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCtable"
                    style="@style/labelGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnBCtable"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngame"
                    android:text="@string/BCbuyTable" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCwaiter"
                    style="@style/labelGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnBCwaiter"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngame"
                    android:text="@string/BCbuyWaiter" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCcook"
                    style="@style/labelGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnBCcook"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngame"
                    android:text="@string/BCbuyCook" />
            </LinearLayout>



            <LinearLayout
                style="@style/labelGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCvisitors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"


                    android:text="@string/BCvisitors" />

                <TextView
                    android:id="@+id/BCvisitors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="test" />

            </LinearLayout>
            <LinearLayout
                style="@style/labelGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textBCprofit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/BCprofit" />

                <TextView
                    android:id="@+id/BCprofit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="test" />

            </LinearLayout>
            <LinearLayout
                style="@style/labelGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBCvisitorsLastWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"


                    android:text="@string/BCvisitorsLastWeek" />

                <TextView
                    android:id="@+id/BCvisitorsLastWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="test" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btnBÐ¡BuyCafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/BCBuyCafe"
        android:background="@drawable/btngame"
        android:visibility="visible" />
    <Button
        android:id="@+id/btnBCSellBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/btngame"
        android:text="@string/BmFSellBusiness" />






</FrameLayout>