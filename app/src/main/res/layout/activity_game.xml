<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game"
    android:largeHeap="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NameFragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NFPass"
            android:layout_marginLeft="5dp"
            style="@style/textHeadline"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            tools:ignore="NestedWeights" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/LayoutScrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textKgScrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/textStart"/>

                <TextView
                    android:id="@+id/KgScrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/textStart"/>

                <TextView
                    android:id="@+id/textCourseScrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/textStart"/>

                <TextView
                    android:id="@+id/CourseScrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/textStart"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/ScrollBusiness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/topBtnMetalPoint"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="ChangeFragments"
                        android:visibility="visible"
                        app:srcCompat="@drawable/metalico"
                        android:contentDescription="TODO" />

                    <ImageButton
                        android:id="@+id/topBtnCafe"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="ChangeFragments"
                        android:src="@drawable/cafeico"
                        android:contentDescription="TODO" />
                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

    </LinearLayout>


    <fragment class="gorbachew.pythonanywhere.ru.First"
        android:id="@+id/MainFragmentsWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/passico" />

            <ImageButton
                android:id="@+id/btnFood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/foodico" />

            <ImageButton
                android:id="@+id/btnMood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/moodico" />

            <ImageButton
                android:id="@+id/btnHealth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/healthico" />

            <ImageButton
                android:id="@+id/btnFreelance"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/workico" />

            <ImageButton
                android:id="@+id/btnWork"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/jobico" />

            <ImageButton
                android:id="@+id/btnBusiness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/businessico" />

            <ImageButton
                android:id="@+id/btnEducation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/educationico" />

            <ImageButton
                android:id="@+id/btnProperty"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/propertyico" />

            <ImageButton
                android:id="@+id/btnHolding"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/holdingico" />

            <ImageButton
                android:id="@+id/btnRespect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/respico2" />
            <ImageButton
                android:id="@+id/btnBank"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/bankico" />

            <ImageButton
                android:id="@+id/btnCasino"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/casinoico" />

            <ImageButton
                android:id="@+id/btnAchivment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/achimentsico" />
            <ImageButton
                android:id="@+id/btnGorbes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="ChangeFragments"
                android:src="@drawable/gorbesico" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">
                <ImageView
                    android:id="@+id/imgDay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/day6" />
                <TextView
                    android:id="@+id/TextHours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    style="@style/textDays"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/TotalDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    style="@style/textStart"
                    android:text="error" />
                <ImageView
                    android:id="@+id/imgResp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/respico" />
                <TextView
                    android:id="@+id/TotalResp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    style="@style/textStart"
                    android:paddingLeft="30dp"
                    android:text="error" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9">
                <ProgressBar
                    android:id="@+id/ProgressBarHP"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_hp"
                    android:progress="100">
                </ProgressBar>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/NamePointHP" />
                <TextView
                    android:id="@+id/TextProgressBarHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="error/error" />
                <ProgressBar
                    android:id="@+id/ProgressBarMP"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressDrawable="@drawable/progress_bar_mp"
                    android:progress="100"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/NamePointMP" />
                <TextView
                    android:id="@+id/TextProgressBarMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:text="error/error" />
                <ProgressBar
                    android:id="@+id/ProgressBarSP"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_sp"
                    android:progress="100" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="@string/NamePointSP" />
                <TextView
                    android:id="@+id/TextProgressBarSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="80dp"
                    android:text="error/error" />
            </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">
                <TextView
                    android:id="@+id/TotalRUB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    style="@style/textStart"
                    android:text="error"/>
                <ImageView
                    android:id="@+id/imgRub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/rubico"/>
                <TextView
                    android:id="@+id/TotalUSD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:layout_gravity="bottom"
                    style="@style/textStart"
                    android:text="error" />
                <ImageView
                    android:id="@+id/imgDoll"
                    android:layout_gravity="bottom|right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/usdico" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>