<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Gorbes">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bggorbes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/GFbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btnstart"
            android:text="@string/GFbtnJoin" />

        <ImageButton
            android:id="@+id/GFbtnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/btnstart"
            android:src="@drawable/refreshico" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/LVGName"
            style="@style/textGorbesTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/GFname" />

        <TextView
            android:id="@+id/LVGAge"
            style="@style/textGorbesTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/GFage" />

        <TextView
            android:id="@+id/LVGUsd"
            style="@style/textGorbesTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/GFusd" />

        <TextView
            android:id="@+id/LVGResp"
            style="@style/textGorbesTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/GFresp" />
    </LinearLayout>

    <ListView
        android:paddingTop="70dp"
        android:id="@+id/GFlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>