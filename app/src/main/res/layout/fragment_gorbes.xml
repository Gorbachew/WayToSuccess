<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bggorbes"
    tools:context=".Gorbes">

    <!-- TODO: Update blank fragment layout -->
    <!--<EditText-->
        <!--android:id="@+id/GFedit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:inputType="textPersonName"-->
        <!--android:hint="Name" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/GFbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnstart"
            android:layout_weight="1"
            android:text="@string/GFbtnJoin" />
        <ImageButton
            android:id="@+id/GFbtnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnstart"
            android:src="@drawable/refreshico"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/LVGName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            style="@style/textGorbesTopLine"
            android:text="@string/GFname" />
        <TextView
            android:id="@+id/LVGAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            style="@style/textGorbesTopLine"
            android:text="@string/GFage" />
        <TextView
            android:id="@+id/LVGUsd"
            style="@style/textGorbesTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/GFusd" />
        <TextView
            android:id="@+id/LVGResp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            style="@style/textGorbesTopLine"
            android:text="@string/GFresp" />
    </LinearLayout>
    <ListView
        android:id="@+id/GFlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

</LinearLayout>