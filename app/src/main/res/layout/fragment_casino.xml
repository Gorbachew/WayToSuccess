<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcasino"
    android:orientation="vertical"
    tools:context=".Casino">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/CasinoResult"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/green"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35dp" />
        <RadioGroup
            android:id="@+id/CasinoRadioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbSpace1and12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btngame"
                android:layout_weight="1"
                android:text="1/12" />
            <RadioButton
                android:id="@+id/rbSpace2and12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btngame"
                android:layout_weight="1"
                android:text="2/12" />
            <RadioButton
                android:id="@+id/rbSpace3and12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btngame"
                android:layout_weight="1"
                android:text="3/12 " />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/CasinoRadioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbSpaceRED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btngame"
                android:textColor="@color/red"
                android:layout_weight="1"
                android:text="RED" />
            <RadioButton
                android:id="@+id/rbSpaceBLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btngame"
                android:layout_weight="1"
                android:largeHeap="true"
                android:text="BLACK" />
        </RadioGroup>
        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/CFRate" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCasinoClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="Clear" />
            <Spinner
                android:id="@+id/CasinoRate"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/btngame"
                android:dropDownWidth="match_parent"
                android:entries="@array/BFspin"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />
            <Button
                android:id="@+id/btnCasinoPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="Play" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>