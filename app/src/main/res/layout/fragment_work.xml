<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:largeHeap="true"
    tools:context=".Work">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bgwork" />

    <ScrollView
        android:id="@+id/choiceWork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnWorkFactory"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="@string/WFInFactory" />

            <Button
                android:id="@+id/btnWorkAutoService"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="@string/WFInAutoService" />

            <Button
                android:id="@+id/btnWorkManagerForSale"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="@string/WFInBank" />

            <Button
                android:id="@+id/btnWorkEngineer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="@string/WFInIT" />

            <Button
                android:id="@+id/btnWorkHeadOfDepartment"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btngame"
                android:text="@string/WFInLaboratories" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/workTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/WTworkName"
                style="@style/labelGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/labelGame"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/WTrankText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/WTrank" />

                <TextView
                    android:id="@+id/WTrank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/labelGame"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/WTloyaltyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/WTloyalty" />

                <TextView
                    android:id="@+id/WTloyalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/labelGame"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/WTsalaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/WTsalary" />

                <TextView
                    android:id="@+id/WTsalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnWTfired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btngame"
            android:layout_gravity="bottom"
            android:text="@string/WTquit" />

        <Button
            android:id="@+id/btnWTjob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngame"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:text="@string/WTjob" />
    </LinearLayout>

</FrameLayout>