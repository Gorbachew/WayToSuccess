<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Start" >


    <fragment
        android:id="@+id/fr_place"
        android:name="gorbachew.pythonanywhere.ru.ChoiceHeroPast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnChoiceHeroPast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Change"
            android:text="@string/btnChoiceHeroPast" />

        <Button
            android:id="@+id/btnHeroPast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Change"
            android:text="@string/btnHeroPast" />

        <Button
            android:id="@+id/btnSaveChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnStartGame" />
    </LinearLayout>
</LinearLayout>
