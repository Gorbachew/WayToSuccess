<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/authors"
    android:orientation="vertical"
    tools:context=".AuthorsActivity">


    <TextView
        android:id="@+id/linkAuthor"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/linkAuthor"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/AMbody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MAbody1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="50dp"
        style="@style/textStart"
        />
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        style="@style/btnMenu"
        android:background="@drawable/btnmenu"
        android:text="@string/Back" />
</LinearLayout>